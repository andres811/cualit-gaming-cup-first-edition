extends ../layout

block content
  div.col-12
  h4.page-title Jugadores
  hr.hr-primary
  div.players-container
    form(method='POST' action='/teams')
      each player in players
        div.player.bg-middle
          div
            b
              p.text-primary= player.name
          div
            p Calentamiento
              ul
              each scores in player.warm_up_scores
                li= scores
              b
                p= "Total: " + player.warm_up_scores.reduce((s1,s2) => s1+s2, 0).toFixed(2)
          div
            p Team
            input.form-control(type='text' id='name' placeholder='Team' name=player.id value=player.team && player.team.name)
      div.player
        div
          p -
        div
          p -
        div
          button.btn.btn-primary(type='submit') Guardar
